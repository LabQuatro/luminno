---
import { markdownify } from "@lib/utils/textConverter";
import { Image } from "@astrojs/image/components";
const { call } = Astro.props;
const { title, description, image, button } = call;
---

<section class="section banner relative">
  <div class="container">
    <div class="row items-center">
      <div class="lg:col-6">
        <h2 class="banner-title" set:html={markdownify(title)} />

        <p class="mt-6" set:html={markdownify(description)} />

        {
          button.enable && (
            <a class="btn btn-outline-primary mt-8" href={button.link}>
              {button.label}
            </a>
          )
        }
      </div>

    </div>
  </div>

  <Image
    class="rouded-full h-28 w-28"
    alt={image.alt}
    src={image.src}
    width={496}
    height={466}
  />
</section>
